<!-- Pass in data from server.js -->
<style>
    body {
        background-color: #F2F6D0
    }

    #wrapper {
        width: 80%;
        margin-left: auto;
        margin-right: auto;
        padding-top: 1%;
    }

    #articles {
        display: inline-block;
        overflow: auto;
        width: 100%;
        height: 700px;
    }

    #notes {
        float: right;
        width: 30%;
    }

    textarea,
    input {
        display: block;
        width: 100%;
        background-color: #FCF5C7;
    }

    input {
        height: 36px;
        font-size: 24px;
    }

    textarea {
        height: 200px;
        font-size: 18px;
    }
</style>
</head>

<body>
    <div id="wrapper">
        <h1>Latest Sports News</h1>
        <h2><i>Catch-up on what you missed and start conversations</i></h2>
        <div id="articles">
            {{#each article}}
                {{!-- <p><span class="label">ID:</span> {{this.id}}</p> --}}
                <div>
                    <p><span class="label">
                            <h5><a href='/articles/{{this._id}}'>{{this.headline}}</a></h5>
                        </span></p>
                    <p><span class="label">{{this.summary}}</span></p>
                </div>
                <div>
            {{/each}}
            </div>
        <div id="notes"></div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="app.js"></script>
</body>

</html>